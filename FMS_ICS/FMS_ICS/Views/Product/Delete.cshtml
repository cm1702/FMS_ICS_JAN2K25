@model FMS_ICS.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.ProductDetails</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Processing Fee</dt>
        <dd class="col-sm-10">@Model.ProcessingFee</dd>
    </dl>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductID)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", "Product", null, new { @class = "btn btn-secondary" })
}